<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/user_rv_item_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repo_item_repoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_rubik_medium"
            android:textColor="@color/user_name_heading"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_repo_item_starCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:drawablePadding="5dp"
            android:textColor="@color/user_repo_info_subheading"
            app:drawableLeftCompat="@drawable/ic_git_star" />

        <TextView
            android:id="@+id/tv_repo_item_issueCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textColor="@color/user_repo_info_subheading"
            app:drawableLeftCompat="@drawable/ic_git_issues" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repo_item_userName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font_rubik_medium"
            android:textColor="@color/user_repo_info_subheading"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_repo_item_forkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textColor="@color/user_forks_count"
            app:drawableLeftCompat="@drawable/ic_git_fork" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/tv_repo_item_langCircle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_lang_circle"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tv_repo_item_langText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>